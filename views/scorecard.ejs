<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Shuttle Showdown</title>
    <link rel="icon" type="image/png" href="\assets\badminton-shuttle-1000x1000-removebg-preview.png">

    <style>
        /* Reset and Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        /* Your custom color scheme */
        :root {
            --primary-red: #B22222;
            --dark-red: #8B0000;
            --light-red: #DC143C;
            --crimson: #DC143C;
            --burgundy: #800020;
            --white: #ffffff;
            --light-gray: #f8f9fa;
            --gray: #6c757d;
            --dark-gray: #343a40;
            --black: #000000;
            --accent-gold: #FFD700;
            --accent-orange: #ff6600;
            --success: #28a745;
            --warning: #ffc107;
            --danger: #dc3545;
            --shadow-light: 0 2px 10px rgba(178, 34, 34, 0.1);
            --shadow-medium: 0 4px 20px rgba(178, 34, 34, 0.15);
            --shadow-heavy: 0 8px 30px rgba(178, 34, 34, 0.25);
            --gradient-red: linear-gradient(135deg, #B22222 0%, #DC143C 50%, #8B0000 100%);
            --gradient-dark: linear-gradient(135deg, #8B0000 0%, #B22222 50%, #800020 100%);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            --transition-fast: all 0.2s ease;
            --border-radius: 12px;
            --border-radius-lg: 20px;
            
            /* Additional variables for consistency */
            --primary: var(--primary-red);
            --secondary: var(--dark-red);
            --accent: var(--accent-gold);
            --light: var(--light-gray);
            --dark: var(--dark-gray);
            --serving-color: var(--accent-gold);
            --shadow: var(--shadow-medium);
            --sidebar-width: 250px;
            --header-height: 70px;
        }

        /* --- Extended styles for the scorecard --- */
        html, body {
            height: 100%;
            background: linear-gradient(180deg, var(--light-gray), #f7fbff);
            color: var(--dark-gray);
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        .container {
            max-width: 1000px;
            margin: 20px auto;
            background: var(--white);
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow-heavy);
            overflow: hidden;
            display: grid;
            grid-template-columns: 1fr;
            animation: fadeIn 0.8s ease-out;
            border: 1px solid rgba(178, 34, 34, 0.1);
        }

        /* Header */
        .header {
            height: var(--header-height);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 18px;
            background: var(--gradient-red);
            gap: 12px;
            color: var(--white);
            box-shadow: var(--shadow-light);
        }
        
        .header h1 {
            font-size: 1.4rem;
            color: var(--white);
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
            letter-spacing: 0.5px;
            animation: slideInFromLeft 0.6s ease-out;
        }
        
        .header .controls {
            display: flex;
            gap: 8px;
            align-items: center;
        }

        /* Match number and set display */
        .match-info-header {
            display: flex;
            justify-content: space-between;
            padding: 12px 18px;
            background: rgba(178, 34, 34, 0.08);
            border-bottom: 1px solid rgba(178, 34, 34, 0.1);
            font-weight: 600;
            color: var(--primary-red);
            animation: fadeIn 0.8s ease-out 0.2s both;
        }
        
        .match-info-header div {
            padding: 6px 12px;
            background: rgba(255, 255, 255, 0.7);
            border-radius: 20px;
            box-shadow: var(--shadow-light);
        }

        /* Set start button */
        .set-start-container {
            text-align: center;
            padding: 16px;
            background: rgba(255, 215, 0, 0.1);
            border-bottom: 1px solid rgba(178, 34, 34, 0.1);
            animation: fadeIn 0.8s ease-out 0.3s both;
        }
        
        .set-start-btn {
            padding: 12px 24px;
            background: var(--gradient-red);
            color: var(--white);
            border: none;
            border-radius: 30px;
            font-weight: 700;
            cursor: pointer;
            transition: var(--transition);
            box-shadow: var(--shadow-medium);
            letter-spacing: 0.5px;
            position: relative;
            overflow: hidden;
        }
        
        .set-start-btn:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-heavy);
        }
        
        .set-start-btn:active {
            transform: translateY(1px);
        }
        
        .set-start-btn::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(rgba(255, 255, 255, 0.2), transparent);
            transform: translateY(100%);
            transition: transform 0.3s ease;
        }
        
        .set-start-btn:hover::after {
            transform: translateY(0);
        }

        /* Settings box */
        .settings {
            display: flex;
            gap: 8px;
            align-items: center;
            background: rgba(255, 255, 255, 0.2);
            padding: 10px;
            border-radius: var(--border-radius);
            font-size: 0.95rem;
            backdrop-filter: blur(5px);
        }
        
        .settings label { 
            font-size: 0.9rem; 
            color: var(--white); 
            font-weight: 500;
        }
        
        .settings input[type="number"], .settings select {
            width: 80px;
            padding: 8px 10px;
            border-radius: var(--border-radius);
            border: 1px solid rgba(255, 255, 255, 0.3);
            outline: none;
            background: rgba(255, 255, 255, 0.9);
            color: var(--dark-gray);
            font-weight: 500;
        }

        /* Main area */
        .main {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            padding: 24px;
            animation: fadeIn 0.8s ease-out 0.4s both;
        }

        /* Player card */
        .player {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            border-radius: var(--border-radius-lg);
            padding: 20px;
            box-shadow: var(--shadow-medium);
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 16px;
            min-height: 280px;
            position: relative;
            transition: var(--transition);
            overflow: hidden;
            border: 1px solid rgba(178, 34, 34, 0.1);
        }
        
        .player::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: var(--gradient-red);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.5s ease;
        }
        
        .player:hover::before {
            transform: scaleX(1);
        }

        /* Serving highlight - Enhanced visibility */
        .player.serving {
            box-shadow: 0 10px 25px rgba(178, 34, 34, 0.2);
            transform: translateY(-5px);
            border: 2px solid var(--accent-gold);
            background: linear-gradient(135deg, #fef9e7 0%, #fdf2c6 100%);
            animation: pulse 2s infinite;
        }
        
        .player.serving::before {
            transform: scaleX(1);
        }

        /* Player header area */
        .player .meta {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
        }
        
        .player .name {
            font-weight: 700;
            font-size: 1.2rem;
            color: var(--primary-red);
            transition: var(--transition);
            padding: 5px 10px;
            border-radius: 8px;
        }
        
        .player.serving .name {
            color: var(--dark-red);
            background: rgba(255, 215, 0, 0.1);
        }
        
        .player .sets-won {
            font-size: 1rem;
            color: var(--dark-red);
            font-weight: 700;
            background: rgba(178, 34, 34, 0.1);
            padding: 4px 12px;
            border-radius: 20px;
        }

        /* Score display */
        .score {
            font-size: 4.5rem;
            font-weight: 800;
            letter-spacing: -2px;
            color: var(--dark-red);
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
        }
        
        .score.anim {
            animation: scoreBounce 0.5s ease;
        }

        /* Advantage / deuce badge */
        .badge {
            padding: 8px 14px;
            border-radius: 999px;
            font-weight: 700;
            font-size: 0.95rem;
            background: var(--gradient-red);
            color: var(--white);
            box-shadow: var(--shadow-light);
            animation: pulse 2s infinite;
        }

        /* Buttons area */
        .controls-vertical {
            display: flex;
            gap: 12px;
            width: 100%;
            justify-content: center;
        }
        
        .btn {
            padding: 14px 20px;
            border-radius: var(--border-radius);
            border: none;
            font-weight: 700;
            font-size: 1rem;
            cursor: pointer;
            box-shadow: var(--shadow-medium);
            transition: var(--transition);
            user-select: none;
            -webkit-tap-highlight-color: transparent;
            position: relative;
            overflow: hidden;
        }
        
        .btn:active { 
            transform: translateY(2px); 
            box-shadow: var(--shadow-light);
        }
        
        .btn-lg { 
            padding: 16px 24px; 
            font-size: 1.1rem; 
            border-radius: var(--border-radius); 
        }
        
        .btn::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(rgba(255, 255, 255, 0.2), transparent);
            transform: translateY(100%);
            transition: transform 0.3s ease;
        }
        
        .btn:hover::after {
            transform: translateY(0);
        }

        /* Specific button colors */
        .btn.inc { 
            background: var(--gradient-red); 
            color: var(--white); 
        }
        
        .btn.dec { 
            background: #f8f9fa; 
            color: var(--primary-red); 
            border: 1px solid rgba(178, 34, 34, 0.2); 
        }
        
        .btn.serviceToggle { 
            background: var(--dark-red); 
            color: var(--white); 
        }
        
        .btn.undo { 
            background: var(--accent-orange); 
            color: var(--white); 
        }

        /* Footer / central controls */
        .center {
            display: flex;
            gap: 16px;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 16px;
        }

        /* Match info */
        .match-info {
            display: flex;
            gap: 12px;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
            padding: 16px;
            border-top: 1px solid rgba(178, 34, 34, 0.1);
            animation: fadeIn 0.8s ease-out 0.5s both;
        }
        
        .info-pill {
            background: rgba(178, 34, 34, 0.08);
            padding: 10px 16px;
            border-radius: 999px;
            border: 1px solid rgba(178, 34, 34, 0.1);
            font-weight: 600;
            color: var(--dark-red);
            box-shadow: var(--shadow-light);
        }

        /* Bottom action row */
        .actions {
            display: flex;
            gap: 12px;
            justify-content: center;
            padding: 16px;
            border-top: 1px solid rgba(178, 34, 34, 0.1);
            animation: fadeIn 0.8s ease-out 0.6s both;
        }

        /* Set history */
        .set-history {
            width: 100%;
            margin-top: 20px;
            padding: 12px;
            border-top: 1px solid rgba(178, 34, 34, 0.1);
        }
        
        .set-history h3 {
            font-size: 1rem;
            color: var(--dark-red);
            margin-bottom: 10px;
            text-align: center;
        }
        
        .set-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
        }
        
        .set-item {
            background: rgba(178, 34, 34, 0.1);
            padding: 6px 12px;
            border-radius: var(--border-radius);
            font-size: 0.9rem;
            color: var(--dark-red);
            font-weight: 600;
            box-shadow: var(--shadow-light);
        }

        /* Set wins display */
        .set-wins-container {
            padding: 16px;
            border-top: 1px solid rgba(178, 34, 34, 0.1);
            animation: fadeIn 0.8s ease-out 0.7s both;
        }
        
        .set-wins-title {
            text-align: center;
            font-weight: 700;
            margin-bottom: 12px;
            color: var(--primary-red);
            font-size: 1.1rem;
        }
        
        .set-wins {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
        
        .set-win-item {
            display: flex;
            justify-content: space-between;
            padding: 10px 14px;
            background: rgba(178, 34, 34, 0.05);
            border-radius: var(--border-radius);
            font-size: 0.95rem;
            color: var(--dark-red);
            font-weight: 600;
            box-shadow: var(--shadow-light);
            transition: var(--transition);
        }
        
        .set-win-item:hover {
            background: rgba(178, 34, 34, 0.1);
            transform: translateX(5px);
        }

        /* Responsive styles */
        @media (max-width: 800px) {
            .main { 
                grid-template-columns: 1fr; 
                padding: 16px; 
                gap: 24px;
            }
            
            .score { font-size: 3.5rem; }
            
            .header { 
                padding: 12px; 
                flex-direction: column;
                height: auto;
                gap: 16px;
            }
            
            .settings { 
                flex-wrap: wrap;
                justify-content: center;
            }
            
            .settings input[type="number"], .settings select { width: 70px; }
            
            .player {
                min-height: 240px;
            }
            
            .match-info {
                flex-direction: column;
                align-items: stretch;
            }
            
            .info-pill {
                text-align: center;
            }
            
            .actions {
                flex-wrap: wrap;
            }
            
            .match-info-header {
                flex-direction: column;
                gap: 10px;
                align-items: center;
            }
        }

        @media (max-width: 480px) {
            .container {
                margin: 10px;
                border-radius: var(--border-radius);
            }
            
            .header h1 {
                font-size: 1.2rem;
            }
            
            .settings {
                font-size: 0.85rem;
            }
            
            .btn {
                padding: 12px 16px;
                font-size: 0.9rem;
            }
            
            .btn-lg {
                padding: 14px 18px;
                font-size: 1rem;
            }
            
            .score {
                font-size: 3rem;
            }
            
            .player {
                padding: 16px;
                gap: 12px;
            }
            
            .info-pill {
                padding: 8px 12px;
                font-size: 0.9rem;
            }
        }

        /* Animation for set-won flash */
        .set-won-flash {
            position: absolute;
            inset: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.15), rgba(255, 215, 0, 0.1));
            font-weight: 900;
            font-size: 2.5rem;
            color: var(--success);
            border-radius: var(--border-radius-lg);
            opacity: 0;
            transform: scale(0.9);
            pointer-events: none;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            z-index: 10;
        }
        
        .set-won-flash.show {
            opacity: 1;
            transform: scale(1);
            animation: setWonPulse 1s ease;
        }

        /* Match winner overlay */
        .overlay {
            position: fixed;
            inset: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.7);
            z-index: 1000;
            pointer-events: all;
            animation: fadeIn 0.5s ease;
        }
        
        .overlay .card {
            background: var(--white);
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow-heavy);
            padding: 32px;
            text-align: center;
            max-width: 90%;
            width: 450px;
            position: relative;
            z-index: 1001;
            animation: scaleIn 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            border: 2px solid var(--accent-gold);
        }
        
        .overlay.hidden { 
            display: none; 
        }
        
        .overlay .card h2 { 
            color: var(--primary-red); 
            margin-bottom: 12px; 
            font-size: 1.8rem;
        }
        
        .overlay .card p { 
            margin-bottom: 16px; 
            color: var(--dark-gray);
            line-height: 1.5;
        }
        
        .overlay .card .close { 
            margin-top: 16px; 
        }

        /* Set confirmation overlay */
        .set-confirmation {
            position: fixed;
            inset: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.7);
            z-index: 1000;
            pointer-events: all;
            animation: fadeIn 0.4s ease;
        }
        
        .set-confirmation.hidden {
            display: none;
        }
        
        .set-confirmation .card {
            position: relative;
            z-index: 1001;
        }
        
        .set-confirmation .card {
            background: var(--white);
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow-heavy);
            padding: 32px;
            text-align: center;
            max-width: 90%;
            width: 400px;
            animation: scaleIn 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 2px solid var(--accent-gold);
        }
        
        .set-confirmation .card h2 {
            color: var(--primary-red);
            margin-bottom: 12px;
            font-size: 1.6rem;
        }
        
        .set-confirmation .card p {
            margin-bottom: 24px;
            color: var(--dark-gray);
            line-height: 1.5;
        }
        
        .set-confirmation .card .buttons {
            display: flex;
            gap: 16px;
            justify-content: center;
        }
        
        .set-confirmation .card button {
            padding: 12px 24px;
            border: none;
            border-radius: var(--border-radius);
            font-weight: 700;
            cursor: pointer;
            transition: var(--transition);
            box-shadow: var(--shadow-medium);
        }
        
        .set-confirmation .card .confirm-btn {
            background: var(--gradient-red);
            color: var(--white);
        }
        
        .set-confirmation .card .cancel-btn {
            background: var(--light-gray);
            color: var(--dark-gray);
            border: 1px solid rgba(0, 0, 0, 0.1);
        }
        
        .set-confirmation .card button:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-heavy);
        }

        /* Set completion overlay */
        .set-completion {
            position: fixed;
            inset: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.7);
            z-index: 1000;
            pointer-events: all;
            animation: fadeIn 0.4s ease;
        }

        .set-completion.hidden {
            display: none;
        }

        .set-completion .card {
            background: var(--white);
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow-heavy);
            padding: 32px;
            position: relative;
            z-index: 1001;
            animation: scaleIn 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 2px solid var(--accent-gold);
            max-width: 90%;
            width: 450px;
        }

        .match-summary {
            margin-top: 20px;
            padding: 20px;
            background: rgba(178, 34, 34, 0.05);
            border-radius: var(--border-radius);
        }

        .summary-container h3 {
            color: var(--primary-red);
            margin-bottom: 16px;
            font-size: 1.2rem;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid rgba(178, 34, 34, 0.1);
        }

        .set-summary-details {
            margin-top: 20px;
            padding: 16px;
            background: rgba(178, 34, 34, 0.05);
            border-radius: var(--border-radius);
        }

        .set-summary-details p {
            margin: 8px 0;
            color: var(--primary-red);
            font-weight: 600;
        }

        .buttons {
            display: flex;
            gap: 16px;
            justify-content: center;
            margin-top: 20px;
        }

        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        @keyframes slideInFromLeft {
            from { 
                opacity: 0;
                transform: translateX(-30px);
            }
            to { 
                opacity: 1;
                transform: translateX(0);
            }
        }
        
        @keyframes scaleIn {
            from { 
                opacity: 0;
                transform: scale(0.9);
            }
            to { 
                opacity: 1;
                transform: scale(1);
            }
        }
        
        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(178, 34, 34, 0.4); }
            70% { box-shadow: 0 0 0 10px rgba(178, 34, 34, 0); }
            100% { box-shadow: 0 0 0 0 rgba(178, 34, 34, 0); }
        }
        
        @keyframes scoreBounce {
            0% { transform: scale(1); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }
        
        @keyframes setWonPulse {
            0% { 
                opacity: 0;
                transform: scale(0.8);
            }
            50% { 
                opacity: 1;
                transform: scale(1.1);
            }
            100% { 
                opacity: 1;
                transform: scale(1);
            }
        }
        
        /* Shuttlecock animation for serving */
        @keyframes shuttlecock {
            0% { transform: translateX(-20px) rotate(0deg); opacity: 0; }
            50% { opacity: 1; }
            100% { transform: translateX(20px) rotate(360deg); opacity: 0; }
        }
        
        .serving::after {
            content: '🏸';
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 1.5rem;
            animation: shuttlecock 2s infinite;
        }
    </style>
</head>
<body>

<div class="container" role="application" aria-label="Badminton scorecard">
    <!-- Header -->
    <div class="header">
        <h1>🏸 Badminton Scorecard</h1>

        <div class="controls">
            <div class="settings" aria-hidden="true" style="display:none">
                <!-- Hidden settings as they come from backend -->
                <label for="maxPoints">Max points</label>
                <input id="maxPoints" type="number" min="5" value="15" title="Points to win a set" disabled />
                <label for="maxSets">Sets to win match</label>
                <input id="maxSets" type="number" min="1" value="3" title="Number of sets required to win the match" disabled />
                <label for="initialServer">First Server</label>
                <select id="initialServer" aria-label="Initial server" disabled>
                    <option value="0">Player 1</option>
                    <option value="1">Player 2</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Match number and set display -->
    <div class="match-info-header">
        <div>Match #: <span id="matchNumber">1</span></div>
        <div>Current Set: <span id="currentSetDisplay">-</span></div>
    </div>

    <!-- Set start button -->
    <div class="set-start-container" id="setStartContainer">
        <button class="set-start-btn" id="setStartBtn">Start Set <span id="setNumberIndicator">1</span></button>
    </div>

    <div class="match-info" aria-hidden="false">
        <div class="info-pill">Max Points: <strong id="displayMaxPoints">15</strong></div>
        <div class="info-pill">Number of sets: <strong id="displayMaxSets">3</strong></div>
        <div class="info-pill">First Server: <strong id="initialServerIndicator">Player 1</strong></div>
    </div>

    <!-- Main content -->
    <div class="main">
        <!-- Player 1 -->
        <div class="player" id="player0" data-index="0" aria-live="polite">
            <div class="meta" >
                <div class="name" id="name0" contenteditable="true" aria-label="Player 1 name">Player 1</div>
                <div class="sets-won">Sets: <span id="sets0">0</span></div>
            </div>

            <div class="center">
                <div id="advBadge0" class="badge" style="display:none">ADV</div>
                <div class="score" id="score0" aria-label="Player 1 score">0</div>
            </div>

            <div class="controls-vertical">
                <button class="btn inc btn-lg" data-player="0" data-action="inc" aria-label="Add point to player 1">+1 Point</button>
            </div>

            <div class="set-won-flash" id="flash0">Set!</div>
        </div>

        <!-- Player 2 -->
        <div class="player" id="player1" data-index="1" aria-live="polite">
            <div class="meta" >
                <div class="name" id="name1" contenteditable="true" aria-label="Player 2 name">Player 2</div>
                <div class="sets-won">Sets: <span id="sets1">0</span></div>
            </div>

            <div class="center">
                <div id="advBadge1" class="badge" style="display:none">ADV</div>
                <div class="score" id="score1" aria-label="Player 2 score">0</div>
            </div>

            <div class="controls-vertical">
                <button class="btn inc btn-lg" data-player="1" data-action="inc" aria-label="Add point to player 2">+1 Point</button>
            </div>

            <div class="set-won-flash" id="flash1">Set!</div>
        </div>
    </div>

    <!-- Undo button -->
    <div class="actions" id="undoContainer" style="display: none;">
        <button id="undoBtn" class="btn undo">Undo Last Action</button>
    </div>

    <div class="actions">
        <button id="toggleServeBtn" class="btn serviceToggle" title="Toggle server manually">Toggle Serve</button>
        <button id="resetMatchBtn" class="btn dec" title="Full reset">Full Reset</button>
    </div>

    <!-- Set wins display -->
    <div class="set-wins-container" id="setWinsContainer" style="display: none;">
        <div class="set-wins-title">Set Results</div>
        <div class="set-wins" id="setWinsList"></div>
    </div>
</div>

<!-- Match winner overlay -->
<div class="overlay hidden" id="overlay" role="dialog" aria-modal="true">
    <div class="card">
        <h2 id="winnerTitle">🏆 Match Winner</h2>
        <p id="winnerText"></p>
        <div id="matchSummary" class="match-summary"></div>
        <div class="buttons" style="margin-top: 20px;">
            <button id="completeMatchBtn" class="btn inc">Complete Match</button>
        </div>
    </div>
</div>

<!-- Set confirmation overlay -->
<div class="set-confirmation hidden" id="setConfirmation">
    <div class="card">
        <h2>Start Set <span id="confirmSetNumber">1</span>?</h2>
        <p>Are you sure you want to start Set <span id="confirmSetNumberText">1</span>?</p>
        <div class="buttons">
            <button class="cancel-btn" id="setCancelBtn">Cancel</button>
            <button class="confirm-btn" id="setConfirmBtn">Confirm</button>
        </div>
    </div>
</div>

<!-- Set completion overlay -->
<div class="set-completion hidden" id="setCompletionOverlay">
    <div class="card">
        <h2>Set Complete!</h2>
        <p id="setCompletionText"></p>
        <div id="setCompletionSummary" class="set-summary"></div>
        <div class="buttons">
            <button class="btn inc" id="startNextSetBtn">Start Next Set</button>
        </div>
    </div>
</div>

<!-- Set win confirmation overlay -->
<div class="set-confirmation hidden" id="setWinConfirmation">
    <div class="card">
        <h2>Confirm Set Win</h2>
        <p id="setWinConfirmText"></p>
        <div class="buttons">
            <button class="cancel-btn" id="setWinCancelBtn">Cancel</button>
            <button class="confirm-btn" id="setWinConfirmBtn">Confirm</button>
        </div>
    </div>
</div>

<script src="/js/scorecard.js"></script>

</body>
</html>